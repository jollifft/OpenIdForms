<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:OpenIdForms" x:Class="OpenIdForms.OpenIdFormsPage">
	<StackLayout>
		<StackLayout.Padding>
			<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
		</StackLayout.Padding>
		<Label Text="OpenId Xam Forms POC" VerticalOptions="Start" HorizontalOptions="Center" FontSize="20"/>
		<Button Text="login" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Command="{Binding LoginCommand}"/>
		<Button Text="token" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Command="{Binding TestCommand}"/>
		<Label Text="Token:" VerticalOptions="Start" HorizontalOptions="Center" FontSize="12"/>
		<Label Text="{Binding TokenText}" VerticalOptions="Start" HorizontalOptions="Center" FontSize="12"/>
	</StackLayout>
</ContentPage>
